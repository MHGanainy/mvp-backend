# Environment variables for the MVP Backend
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Use Railway PostgreSQL for all environments
DATABASE_URL="postgresql://username:password@host:port/database_name"

# Example formats:
# Dev: postgresql://postgres:PASSWORD@mainline.proxy.rlwy.net:50039/railway
# Staging: postgresql://postgres:PASSWORD@hopper.proxy.rlwy.net:47992/railway
# Production: postgresql://postgres:PASSWORD@caboose.proxy.rlwy.net:55655/railway

# ============================================
# AUTHENTICATION
# ============================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# ============================================
# VOICE SERVICES
# ============================================
# Used for internal API authentication (billing webhooks, etc.)
VOICE_AGENT_SHARED_SECRET="your-voice-agent-shared-secret"

# LiveKit Service URL
# Local development: http://localhost:8000
# Staging: https://orchestrator-staging-c1dc.up.railway.app
# Production: Update with your production orchestrator URL
LIVEKIT_SERVICE_URL="http://localhost:8000"

# ============================================
# AI SERVICES
# ============================================
# OpenAI API Key (for feedback generation - alternative to Groq)
OPENAI_API_KEY="sk-proj-your-openai-api-key"

# Groq API Key (for feedback generation - currently active)
GROQ_API_KEY="gsk_your-groq-api-key"

# ============================================
# PAYMENT PROCESSING
# ============================================
# Stripe API Keys
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# ============================================
# EMAIL SERVICE (SMTP)
# ============================================
# SMTP Configuration (for OTP, password reset, etc.)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Application Details
APP_NAME="MedGrader"
FRONTEND_URL="http://localhost:5173"

# ============================================
# OAUTH PROVIDERS
# ============================================
# Google OAuth (optional - for "Sign in with Google")
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV="development"
LOG_LEVEL="info"

# Port (optional, defaults to 3000)
PORT=3000